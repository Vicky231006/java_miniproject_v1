<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.LoginController">
  <children>
    <VBox spacing="10" alignment="CENTER" layoutX="40" layoutY="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
      <children>
        <Label text="Online Quiz Management System" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <ChoiceBox fx:id="roleChoice" />
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" maxWidth="200"/>
      </children>
      <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>
    </VBox>
  </children>
</AnchorPane>
